PORT=8080
HOST=0.0.0.0
NODE_ENV=production
FRONTEND_URL=https://your-frontend-domain.com
KSEF_API_URL=https://ksef-test.mf.gov.pl

# KSeF Mock Service Configuration
# Set to 'true' to enable mock KSeF API (recommended for development)
# Set to 'false' to use real KSeF API
USE_MOCK_KSEF=true

# KSeF Environment (when using real API)
# Options: test, demo, prod
KSEF_ENVIRONMENT=test

# Backend URL (for mock service)
BACKEND_URL=http://localhost:3001

# GUS REGON API Configuration
# Get your free API key from: https://wyszukiwarkaregon.stat.gov.pl/appBIR/index.aspx
GUS_API_KEY=your-gus-api-key-here
# Alternative key name (deprecated, use GUS_API_KEY instead)
# GUS_USER_KEY=your-gus-api-key-here

# GUS Environment (set to 'false' to use production environment)
GUS_USE_TEST=true


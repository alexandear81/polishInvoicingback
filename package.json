{
  "name": "invoice-pwa-backend",
  "version": "1.0.0",
  "description": "Backend server for KSeF API integration",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "lint": "eslint src --ext .ts",
    "test:mock": "node src/mock/test-mock-ksef.js",
    "test:deployed": "node test-deployed-mock.js",
    "test:gus": "node test-gus-regon.js",
    "verify:mock": "node verify-mock-mode.js",
    "mock:enable": "echo 'USE_MOCK_KSEF=true' >> .env",
    "mock:disable": "echo 'USE_MOCK_KSEF=false' >> .env"
  },
  "dependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.6",
    "@types/xml2js": "^0.4.14",
    "axios": "^1.11.0",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "multer": "^1.4.5-lts.1",
    "react": "^19.1.1",
    "typescript": "^5.8.3",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.30.1",
    "tsx": "^4.19.2"
  }
}
